intZeroPositionCounter = 0
intCurrentDialPosition = 50
for dialDirection in lstMoves:
    # Get Direction
    strDirection = dialDirection[0]

    # Get Amount
    intAmplitude = int(dialDirection[1:])

    intCounter = 0
    while intCounter < intAmplitude:
        if(strDirection == "L"):
            #Decrease Counter
            if(intCurrentDialPosition != 0):
                intCurrentDialPosition = intCurrentDialPosition - 1
            else:
                intCurrentDialPosition = 99
        else:
            #Increase Counter
            if(intCurrentDialPosition != 0):
                intCurrentDialPosition = intCurrentDialPosition + 1
            else:
                intCurrentDialPosition = 1

        if(intCurrentDialPosition == 100):
            # Renumber Dial Position 100 as 0
            intCurrentDialPosition = 0


        if(intCurrentDialPosition == 0):
            intZeroPositionCounter += 1

        intCounter+=1

    
print(intZeroPositionCounter)
